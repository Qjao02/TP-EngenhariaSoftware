<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.CadastroUsuarioActivity"
    android:background="@color/colorGreen">

    <EditText
        android:id="@+id/nomeCadastroEditText"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/setaCadastroImageView"
        android:layout_marginTop="57dp"
        android:background="@color/colorGreenDarker"
        android:hint="Digite seu nome:" />

    <EditText
        android:id="@+id/emailCadastroEditText"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/sobrenomeCadastroEditText"
        android:layout_marginTop="97dp"
        android:background="@color/colorGreenDarker"
        android:ems="10"
        android:hint="Digite seu email:"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/buttonCadastrar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorGreenDarker"
        android:text="Cadastrar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setaCadastroImageView"
        android:background="@drawable/ic_action_arrow_left"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/senhaCadastroEditText"
        android:background="@color/colorGreenDarker"
        android:hint="Digite sua senha:"
        android:layout_below="@+id/emailCadastroEditText"
        android:layout_alignLeft="@+id/emailCadastroEditText"
        android:layout_alignStart="@+id/emailCadastroEditText"
        android:layout_marginTop="33dp"
        android:layout_alignRight="@+id/emailCadastroEditText"
        android:layout_alignEnd="@+id/emailCadastroEditText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/reSenhaCadastroEditText"
        android:hint="Redigite sua senha:"
        android:background="@color/colorGreenDarker"
        android:layout_below="@+id/senhaCadastroEditText"
        android:layout_alignLeft="@+id/senhaCadastroEditText"
        android:layout_alignStart="@+id/senhaCadastroEditText"
        android:layout_marginTop="31dp"
        android:layout_alignRight="@+id/senhaCadastroEditText"
        android:layout_alignEnd="@+id/senhaCadastroEditText" />

    <EditText
        android:id="@+id/sobrenomeCadastroEditText"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/nomeCadastroEditText"
        android:layout_marginTop="50dp"
        android:background="@color/colorGreenDarker"
        android:ems="10"
        android:hint="Digite seu sobrenome:"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/cadastroSpinner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/altura_spinner"
        android:layout_below="@+id/sobrenomeCadastroEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@color/colorGreenDarker"
        android:backgroundTint="@color/colorGreenDarker" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nomeCadastroEditText"
        android:layout_centerHorizontal="true"
        android:text="Criar nova conta"
        android:textSize="30dp" />

</RelativeLayout>
