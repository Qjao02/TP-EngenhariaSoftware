<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:background="@color/colorGreenSecond"
    tools:context="com.ufsj.ies.controlfarma.activity.MainActivity">

    <include android:id="@+id/toolbar"
        layout="@layout/toolbar" ></include>

    <com.ufsj.ies.controlfarma.helper.SlidingTabLayout
        android:id="@+id/stl_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGreenSecond">

    </com.ufsj.ies.controlfarma.helper.SlidingTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pagina_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
